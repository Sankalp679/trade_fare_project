<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

<body>
    <form class="container" action="/update_venue/<%=venue_id%>/<%=venue_city%>/<%=venue_addr%>/<%=state_name%>/<%=country_name%>" method="POST">
        <div class="mb-3">
            <label class="forms-label">Enter the city for your venue</label>
            <input type="text" class="form-control" name="venue_city" value="<%=venue_city%>">
        </div>

        <div class="mb-3">
            <label class="form-label">Enter the address for your venue</label>
            <input type="text" class="form-control" name="venue_addr" value="<%=venue_addr%>">
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text">Select State Name</label>
            <select class="form-select" name="state_name">
      <option selected value="<%=state_name%>"><%=state_name%></option>
      <% state_data.forEach((item)=>{%>
        <option value="<%=item.state_name%>"><%=item.state_name%></option>
    <%});%>
      
  </select>
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupSelect01">Select Country Name</label>
            <select class="form-select" name="country_name" id="inputGroupSelect01">
      <option selected value="<%=country_name%>"><%=country_name%></option>
      <% country_data.forEach((item)=>{%>
        <option value="<%=item.country_name%>"><%=item.country_name%></option>
      <%});%>
  </select>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
</body>

</html>