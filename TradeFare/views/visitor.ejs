        <section class="charts">
            <div class="container-fluid">
                <form class="container" action="/visitor" method="POST">
                    <div class="mb-3">
                        <label class="form-label">Enter First Name</label>
                        <input type="text" class="form-control" name="first_name" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Enter Last Name</label>
                        <input type="text" class="form-control" name="last_name" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Enter Address</label>
                        <input type="text" class="form-control" name="addr" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Enter Pincode</label>
                        <input type="text" class="form-control" name="pin_code" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Enter Contact Number</label>
                        <input type="text" class="form-control" name="mob_no" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Enter Visitor Email Id</label>
                        <input type="text" class="form-control" name="email_id" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Enter Date of Birth(yyyy-mm-dd)</label>
                        <input type="text" class="form-control" name="date_of_birth" required>
                    </div>

                    <div class="input-group mb-3">
                        <label class="input-group-text">Select Gender</label>
                        <select class="form-select" name="gender">
                            <option value="M">M</option>
                            <option value="F">F</option>
                        </select>
                    </div>


                    <button type="submit" class="btn btn-outline-primary">Add</button>
                </form>
                <hr>
                <div class="container">
                    <table class="table table-hover" style="text-align:center">
                        <thead>
                            <tr>

                                <th scope="col">Sno</th>
                                <th scope="col">First Name</th>
                                <th scope="col">last Name</th>
                                <th scope="col">Address</th>
                                <th scope="col">Pincode</th>
                                <th scope="col">Contact No</th>
                                <th scope="col">Visitor Email Id</th>
                                <th scope="col">DOB</th>
                                <th scope="col">Gender</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%visitor_data.forEach((item)=>{%>
                                <tr>
                                    <td>
                                        <%=item.visitor_id%>
                                    </td>
                                    <td>
                                        <%=item.first_name%>
                                    </td>
                                    <td>
                                        <%=item.last_name%>
                                    </td>
                                    <td>
                                        <%=item.addr%>
                                    </td>
                                    <td>
                                        <%=item.pin_code%>
                                    </td>
                                    <td>
                                        <%=item.mob_no%>
                                    </td>
                                    <td>
                                        <%=item.email_id_visitor%>
                                    </td>
                                    <td>
                                        <%=item.date_of_birth%>
                                    </td>

                                    <td>
                                        <%=item.gender%>
                                    </td>
                                    <td><a href="/update_visitor/<%=item.visitor_id%>/<%=item.first_name%>/<%=item.last_name%>/<%=item.addr%>/<%=item.pin_code%>/<%=item.mob_no%>/<%=item.email_id_visitor%>/<%=item.date_of_birth%>/<%=item.gender%>" type="button"
                                            class="btn btn-outline-warning btn-sm mx-1">Update</a>
                                        <a href="/delete_visitor/<%=item.visitor_id%>" type="button" class="btn btn-outline-danger  btn-sm mx-1">Delete</a>
                                    </td>
                                </tr>
                                <%});%>
                        </tbody>
