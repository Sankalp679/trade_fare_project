<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

<body>
    <form class="container" action="/update_mccard/<%=card_id%>/<%=spend_amt%>/<%=spend_date%>/<%=payment_mode%>/<%=event_name%>/<%=email_id%>/<%=email_id_visitor%>" method="POST">
        <div class="mb-3">
            <label class="forms-label">Enter the Amount Spent</label>
            <input type="text" class="form-control" name="spend_amt" value="<%=spend_amt%>">
        </div>

        <div class="mb-3">
            <label class="form-label">Enter the Amount Spent Date (yyyy-mm-dd)</label>
            <input type="text" class="form-control" name="spend_date" value="<%=spend_date%>">
        </div>
        <div class="mb-3">
            <label class="form-label">Enter Payment Mode</label>
            <input type="text" class="form-control" name="payment_mode" value="<%=payment_mode%>">
        </div>


        <div class="input-group mb-3">
            <label class="input-group-text">(Enter correct event name associated with the exhibitor you choose i.e refer booking page)</label>
            <select class="form-select" name="event_name">
              <option selected value="<%=event_name%>"><%=event_name%></option>
              <%booking_data.forEach((item)=>{%>
                <option value="<%=item.event_name%>"><%=item.event_name%></option>
              <%});%>
  </select>
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Select Exhibitor Email ID</label>
            <select class="form-select" name="email_id">
                <option selected value="<%=email_id%>"><%=email_id%></option>
                <%booking_data.forEach((item)=>{%>
                  <option value="<%=item.email_id%>"><%=item.email_id%></option>
                <%});%>
            </select>
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text">Select Visitor Email ID</label>
            <select class="form-select" name="email_id_visitor">
              <option selected value="<%=email_id_visitor%>"><%=email_id_visitor%></option>
              <%visitor_data.forEach((item)=>{%>
                <option value="<%=item.email_id_visitor%>"><%=item.email_id_visitor%></option>
              <%});%>
  </select>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
</body>

</html>