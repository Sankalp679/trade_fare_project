        <section class="charts">
            <div class="container-fluid">
                <form class="container" action="/mccard" method="POST">
                    <div class="mb-3">
                        <label class="form-label">Enter Amount Spent</label>
                        <input type="text" class="form-control" name="spend_amt" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Enter Spent Date (yyyy-mm-dd)</label>
                        <input type="text" class="form-control" name="spend_date" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Enter Payment Mode</label>
                        <input type="text" class="form-control" name="payment_mode" required>
                    </div>

                    <div class="input-group mb-3">
                        <label class="input-group-text">Select Event Name (Enter correct event name associated with the exhibitor you choose i.e refer booking page)</label>
                        <select class="form-select" name="event_name">
                              <%booking_data.forEach((item)=>{%>
                                <option value="<%=item.event_name%>"><%=item.event_name%></option>
                              <%});%>
                        </select>
                    </div>
                    <!--        <div class="input-group mb-3">-->
                    <!--              <label class="input-group-text" >Select Booking Date</label>-->
                    <!--              <select class="form-select"  name="booking_date">-->
                    <!--              {% for item in booking_data %}-->
                    <!--                <option value="{{item[1]}}">{{item[1]}}</option>-->
                    <!--              {% endfor %}-->
                    <!--  </select>-->
                    <!--</div>-->
                    <div class="input-group mb-3">
                        <label class="input-group-text">Select Exhibitor Email ID</label>
                        <select class="form-select" name="email_id">
                            <%booking_data.forEach((item)=>{%>
                              <option value="<%=item.email_id%>"><%=item.email_id%></option>
                            <%});%>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group-text">Select Visitor Email ID</label>
                        <select class="form-select" name="email_id_visitor">
                            <%visitor_data.forEach((item)=>{%>
                              <option value="<%=item.email_id_visitor%>"><%=item.email_id_visitor%></option>
                            <%});%>
                        </select>
                    </div>

                    <!--  | card_id      | int          | NO   | PRI | NULL    | auto_increment |-->
                    <!--| spend_amt    | int          | NO   |     | NULL    |                |-->
                    <!--| spend_date   | datetime     | NO   |     | NULL    |                |-->
                    <!--| payment_mode | varchar(255) | YES  |     | NULL    |                |-->
                    <!--| event_id     | int          | YES  | MUL | NULL    |                |-->
                    <!--| booking_id   | int          | YES  | MUL | NULL    |                |-->
                    <!--| visitor_id   | int          | YES  | MUL | NULL    |-->

                    <button type="submit" class="btn btn-outline-primary">Add</button>
                </form>
                <hr>
                <div class="container">
                    <table class="table table-hover" style="text-align:center">
                        <thead>
                            <tr>
                                <th scope="col">Sno</th>
                                <th scope="col">Amount Spent</th>
                                <th scope="col">Spent Date</th>
                                <th scope="col">Payment Mode</th>
                                <th scope="col">Event Name</th>
                                <th scope="col">Exhibitor Email Id</th>
                                <th scope="col">Visitor Email Id</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%mccard_data.forEach((item)=>{%>
                                <tr>
                                    <td>
                                        <%=item.card_id%>
                                    </td>
                                    <td>
                                        <%=item.spend_amt%>
                                    </td>
                                    <td>
                                        <%=item.spend_date%>
                                    </td>
                                    <td>
                                        <%=item.payment_mode%>
                                    </td>
                                    <td>
                                        <%=item.event_name%>
                                    </td>
                                    <td>
                                        <%=item.email_id%>
                                    </td>
                                    <td>
                                        <%=item.email_id_visitor%>
                                    </td>

                                    <td><a href="/update_mccard/<%=item.card_id%>/<%=item.spend_amt%>/<%=item.spend_date%>/<%=item.payment_mode%>/<%=item.event_name%>/<%=item.email_id%>/<%=item.email_id_visitor%>" " type="button " class="btn btn-outline-warning
                                            btn-sm ">Update</a>
                                        <a href="/delete_mccard/<%=item.card_id%>" type="button" class="btn btn-outline-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                                <%});%>
                        </tbody>
